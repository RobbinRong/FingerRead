<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:scaleType="fitCenter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:riv_corner_radius="20dip"
            app:riv_border_width="0dip"
            app:riv_oval="true"
            android:id="@+id/iv_dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="name"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:id="@+id/tv_name_dp"
            android:layout_toRightOf="@id/iv_dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="city"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_city"
            android:layout_below="@id/tv_name_dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="åˆ†"
            android:textSize="14sp"
            android:id="@+id/tv_fen_dp"
            android:textColor="#FFC125"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_score_dp"
            android:text="9"
            android:textSize="20sp"
            android:textColor="#FFC125"
            android:layout_toLeftOf="@id/tv_fen_dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content "
            android:id="@+id/tv_content_dp"
            android:layout_toRightOf="@id/iv_dp"
            android:layout_below="@id/tv_city"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="2016.10.20"
            android:id="@+id/tv_date_dp"
            android:layout_toRightOf="@id/iv_dp"
            android:layout_below="@id/tv_content_dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_common_approve_dp"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_content_dp"
            android:layout_alignParentRight="true"
            android:text="4567"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/tv_content_dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/tv_common_approve_dp"
            android:src="@drawable/zan"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>