<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:layout_marginTop="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:id="@+id/rl_item"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="71dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_gaoyuanyuan"
                />
      <!--      <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/iv_play"
                android:layout_gravity="center"
                android:src="@drawable/play"
                />-->
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_img"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_nm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:text="Title" />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="3D"
                    android:textSize="10sp"
                    android:background="#a1a1ea"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_alignBottom="@id/tv_title"
                    android:layout_alignLeft="@+id/tv_title"
                    android:visibility="invisible"
                    android:id="@+id/d3"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:text="IMAX"
                    android:textSize="10sp"
                    android:background="@drawable/imax_border"
                    android:gravity="center"
                    android:id="@+id/tv_imax"
                    android:textColor="#a1a1ea"
                    android:visibility="invisible"
                    android:layout_alignBottom="@+id/d3"
                    android:layout_toRightOf="@+id/d3"
                    android:layout_toEndOf="@+id/d3" />

            </LinearLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_alignLeft="@+id/tv_title"
                android:layout_alignStart="@+id/tv_title"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:id="@+id/ll_rating"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="评分:"
                        android:id="@+id/tv_rating"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="9.9"
                        android:id="@+id/tv_sc"
                        android:textColor="#FFC125"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:id="@+id/ll_wish"
                    android:visibility="invisible"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="123456"
                        android:textColor="#FFC125"
                        android:id="@+id/tv_wish"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="人想看"
                        android:layout_marginLeft="3dp"
                        />
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描述描述描述"
                    android:textSize="12sp"
                    android:textColor="#444"
                    android:id="@+id/tv_scm"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="场次场次场次"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"
                    android:textColor="#444"
                    android:id="@+id/tv_showinfo"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

